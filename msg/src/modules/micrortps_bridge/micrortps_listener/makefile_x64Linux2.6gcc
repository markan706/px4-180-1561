CPP= g++
CPPFLAGS = -c -Wall -fpic -m64 -O2 -std=c++0x
LN= g++
AR=ar
LDFLAGS= -m64
SYSLIBS= -ldl -lnsl -lm -lpthread -lrt
DEFINES= 

INCLUDES= -I. 

LIBS =  -lfastcdr -lfastrtps $(SYSLIBS)

DIRECTORIES= output.dir output/x64Linux2.6gcc.dir lib.dir lib/x64Linux2.6gcc.dir bin.dir bin/x64Linux2.6gcc.dir

all: $(DIRECTORIES) rtps_send_distance_sensor_ rtps_send_distance_sensor_PublisherSubscriber


rtps_send_distance_sensor__TARGET= lib/x64Linux2.6gcc/librtps_send_distance_sensor_.so
rtps_send_distance_sensor__TARGET_Z= lib/x64Linux2.6gcc/librtps_send_distance_sensor_.a

rtps_send_distance_sensor__CLIENT_EXAMPLE_TARGET= bin/x64Linux2.6gcc/rtps_send_distance_sensor_PublisherSubscriber
rtps_send_distance_sensor__COMMON_SRC_CXXFILES = rtps_send_distance_sensor_.cxx

rtps_send_distance_sensor__COMMON_SRC_CPPFILES=

rtps_send_distance_sensor__CLIENTSOURCES = rtps_send_distance_sensor_PubSubTypes.cxx \
	rtps_send_distance_sensor_Publisher.cxx \
	rtps_send_distance_sensor_Subscriber.cxx \
	rtps_send_distance_sensor_PubSubMain.cxx

rtps_send_distance_sensor__COMMONOBJS    = $(rtps_send_distance_sensor__COMMON_SRC_CXXFILES:%.cxx=output/x64Linux2.6gcc/%.o) $(rtps_send_distance_sensor__COMMON_SRC_CPPFILES:%.cpp=output/x64Linux2.6gcc/%.o)

rtps_send_distance_sensor__CLIENTOBJS    = $(rtps_send_distance_sensor__CLIENTSOURCES:%.cxx=output/x64Linux2.6gcc/%.o)

rtps_send_distance_sensor_OBJS+= $(rtps_send_distance_sensor__COMMONOBJS) $(rtps_send_distance_sensor__CLIENTOBJS)
OBJS+= $(rtps_send_distance_sensor_OBJS)

$(rtps_send_distance_sensor__TARGET): $(rtps_send_distance_sensor__COMMONOBJS)
	$(LN) $(LDFLAGS) -shared -o $(rtps_send_distance_sensor__TARGET) $(rtps_send_distance_sensor__COMMONOBJS) $(LIBS) -Llib/x64Linux2.6gcc 

$(rtps_send_distance_sensor__TARGET_Z): $(rtps_send_distance_sensor__COMMONOBJS)
	$(AR) -cru $(rtps_send_distance_sensor__TARGET_Z) $(rtps_send_distance_sensor__COMMONOBJS)

$(rtps_send_distance_sensor__CLIENT_EXAMPLE_TARGET): $(rtps_send_distance_sensor_OBJS) lib/x64Linux2.6gcc/librtps_send_distance_sensor_.a 
	$(LN) $(LDFLAGS) -o $@ $(rtps_send_distance_sensor_OBJS) -Wl,-Bstatic -Llib/x64Linux2.6gcc -lrtps_send_distance_sensor_  -Wl,-Bdynamic $(LIBS)

rtps_send_distance_sensor_PublisherSubscriber : $(rtps_send_distance_sensor__CLIENT_EXAMPLE_TARGET)
rtps_send_distance_sensor_: $(rtps_send_distance_sensor__TARGET) $(rtps_send_distance_sensor__TARGET_Z) rtps_send_distance_sensor_PublisherSubscriber

output/x64Linux2.6gcc/%.o:%.cxx
	$(CPP) $(CPPFLAGS) $(INCLUDES) $(DEFINES) -c $< -o $@

output/x64Linux2.6gcc/%.o:%.cpp
	$(CPP) $(CPPFLAGS) $(INCLUDES) $(DEFINES) -c $< -o $@

.PHONY: rtps_send_distance_sensor_ rtps_send_distance_sensor_PublisherSubscriber

clean:
	@rm -f $(OBJS)

%.dir : 
	@echo "Checking directory $*"
	@if [ ! -d $* ]; then \
		echo "Making directory $*"; \
		mkdir -p $* ; \
	fi;
